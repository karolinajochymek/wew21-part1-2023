{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "**/src/polyfills.ts",
        "**/src/main.ts",
        "**/src/test.ts"
    ],
    "rules": {
        "quotes": ["error", "single", { "allowTemplateLiterals": true }]
    }
}
